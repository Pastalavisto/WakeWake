<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WakeWake" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>

    </style>

    <style name="event_item" parent="Base.Theme.WakeWake">
        <item name="android:background">@drawable/event_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>

    <style name="event_item_text" parent="Base.Theme.WakeWake">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="topbar" parent="Base.Theme.WakeWake">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="day_item" parent="Base.Theme.WakeWake">
        <item name="android:backgroundTint">@color/primary_dark</item>
    </style>

    <style name="day_item_text" parent="Base.Theme.WakeWake">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_height">20dp</item>
    </style>
</resources>